{
  "name": "<%= machineId %>",
  "description": "This role was generated by the vampd generator",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {},
  "override_attributes": {
   "drupal": {
      "sites": {
        "<%= machineId %>": {
          "active": true,
          "deploy": {
            "action": <%= actionsJSON %>
          },
          "drupal": {
            "version": "<%= drupalVersion %>",
            "settings": {
              "docroot": "<%= drupalDocroot %>",
              "profile": "<%= drupalProfile %>",
              "files": "<%= drupalSiteFiles %>",
              "settings": {
                "default": {
                  "location": "<%= drupalSiteSettings %>"
                }
              }
            }
          },
          "repository": {
            "host": "<%= gitHost %>",
            "uri": "<%= gitURI %>",
            "revision": "<%= gitRevision %>"
          }
        }
      }
    }
  }
}
